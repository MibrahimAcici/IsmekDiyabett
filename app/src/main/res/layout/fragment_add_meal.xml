<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.fragment.AddMealFragment">

    <View
        android:id="@+id/tv_newMeal"
        android:layout_width="208dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="YENİ ÖĞÜN"
        android:background="@drawable/ic_yeni_ogun"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="24dp">
    </View>
    <Button
        android:id="@+id/btn_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarih seçiniz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_newMeal"
        android:layout_marginTop="24dp"
        android:backgroundTint="#477768" />

    <TextView
        android:id="@+id/tv_textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_timePicker"
        app:layout_constraintBottom_toTopOf="@id/btn_timePicker2"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="16-06-2020"/>

    <Button
        android:id="@+id/btn_timePicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saat seçiniz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_textTime"
        app:layout_constraintBottom_toTopOf="@id/tv_timePicker"
        android:layout_marginTop="8dp"
        android:backgroundTint="#477768" />


    <TextView
        android:id="@+id/tv_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_timePicker2"
        app:layout_constraintBottom_toTopOf="@id/edt_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Saat : "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginBottom="28dp">
    </TextView>


    <EditText
        android:id="@+id/edt_1"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:background="#192E35"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edt_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_timePicker"

        />

    <TextView
        android:id="@+id/tv_sayi1"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:background="#75C09B"
        android:paddingStart="7dp"
        android:text="1"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_1"
        app:layout_constraintTop_toTopOf="@id/edt_1">

    </TextView>


    <EditText
        android:id="@+id/edt_2"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="#192E35"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edt_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_1" />

    <TextView
        android:id="@+id/tv_sayi2"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:background="#75C09B"
        android:paddingStart="7dp"
        android:text="2"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_2"
        app:layout_constraintTop_toTopOf="@id/edt_2">

    </TextView>

    <EditText
        android:id="@+id/edt_3"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="#192E35"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edt_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_2" />

    <TextView
        android:id="@+id/tv_sayi3"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:background="#75C09B"
        android:paddingStart="7dp"
        android:text="3"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_3"
        app:layout_constraintTop_toTopOf="@id/edt_3">

    </TextView>

    <EditText
        android:id="@+id/edt_4"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="#192E35"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edt_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_3" />

    <TextView
        android:id="@+id/tv_sayi4"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:background="#75C09B"
        android:paddingStart="7dp"
        android:text="4"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_4"
        app:layout_constraintTop_toTopOf="@id/edt_4">

    </TextView>

    <EditText
        android:id="@+id/edt_5"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="#192E35"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edt_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_4"
        />

    <TextView
        android:id="@+id/tv_sayi5"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:background="#75C09B"
        android:paddingStart="7dp"
        android:text="5"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_5"
        app:layout_constraintTop_toTopOf="@id/edt_5">

    </TextView>
    <EditText
        android:id="@+id/edt_6"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="#192E35"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/add_meal_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_5"
        />

    <TextView
        android:id="@+id/tv_sayi6"
        android:layout_width="50dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:background="#75C09B"
        android:paddingStart="7dp"
        android:text="6"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_6"
        app:layout_constraintTop_toTopOf="@id/edt_6">

    </TextView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_meal_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#192E35"
        android:elevation="6dp"
        app:tint="@color/white"
        android:src="@drawable/ic_baseline_check_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_6"

        />


</androidx.constraintlayout.widget.ConstraintLayout>