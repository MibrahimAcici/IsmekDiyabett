<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/data_table_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#D4273A42"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/item_cizgi"
        android:layout_width="15dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/ic_item_cizgi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/item_elips"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/ic_item_elips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/item_elipss"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/ic_item_elips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/item_elips_hh"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="300dp"
        android:background="@drawable/ic_item_elips_hh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/data_table_saat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:20"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/data_table_image"
        app:layout_constraintEnd_toStartOf="@+id/item_cizgi"
        app:layout_constraintStart_toStartOf="@+id/data_table_image"
        app:layout_constraintTop_toTopOf="@+id/data_table_image" />

    <TextView
        android:id="@+id/data_table_ortalama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="100"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/data_table_image"
        app:layout_constraintEnd_toEndOf="@+id/item_elips"
        app:layout_constraintStart_toStartOf="@+id/item_elips"
        app:layout_constraintTop_toTopOf="@+id/data_table_image" />

    <TextView
        android:id="@+id/data_table_sapma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="+10"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/data_table_image"
        app:layout_constraintEnd_toEndOf="@+id/item_elipss"
        app:layout_constraintStart_toStartOf="@+id/item_elipss"
        app:layout_constraintTop_toTopOf="@+id/data_table_image" />

    <TextView
        android:id="@+id/data_table_hiper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="25dp"
        android:text="1"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/data_table_image"
        app:layout_constraintEnd_toEndOf="@+id/item_elips_hh"
        app:layout_constraintStart_toStartOf="@+id/item_elips_hh"
        app:layout_constraintTop_toTopOf="@+id/data_table_image" />

    <TextView
        android:id="@+id/data_table_hipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="27dp"
        android:text="3"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/data_table_image"
        app:layout_constraintEnd_toEndOf="@+id/item_elips_hh"
        app:layout_constraintStart_toStartOf="@+id/item_elips_hh"
        app:layout_constraintTop_toTopOf="@+id/data_table_image" />

</androidx.constraintlayout.widget.ConstraintLayout>